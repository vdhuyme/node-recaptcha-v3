{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "outDir": "./lib",
    "declaration": true,
    "declarationDir": "./lib/types",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
